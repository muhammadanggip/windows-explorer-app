{
  "name": "windows-explorer-backend",
  "version": "1.0.0",
  "description": "Backend API for Windows Explorer application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "db:setup": "tsx src/database/setup.ts",
    "db:create-tables": "tsx src/database/create-tables.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "add-folder": "tsx src/scripts/add-folder.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.9",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "mysql2": "^3.14.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
